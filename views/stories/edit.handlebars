<h1>Edit Story</h1>
<div class="row">
  <form action="/stories" method="post" class="col s12">
    <div class="row">
      <div class="input-field">
        <input type="text" name="title" value="{{story.title}}">
        <label for="title">Title</label>
      </div>
    </div>

     <div class="row">
      <div class="input-field">
        <select name="status">
          <option value="public" selected>Public</option>
          <option value="private">Private</option>
          <option value="unpublished">Unpublished</option>
        </select>
        <label for="status">Status</label>
      </div>
    </div>
    <div class="row">
      <p>
        <label for="fill-in-box">
            <input type="checkbox" class="filled-in" id="fill-in-box" checked="checked"  name="allowComments"/>
            <span>Allow comments</span>
        </label>
      </p>
    </div>
    <div class="row">
      <div class="input-field">
        <h5>Tell us your story:</h5>
        <textarea name="body" ></textarea>
      </div>
    </div>
    <input type="submit" value="Save" class="btn">
  </form>
</div>