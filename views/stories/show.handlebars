<h3>{{story.title}}</h3>
<div class="row">
  <div class="col s12 m8">
    <div class="card story">
      <div class="card-content">
        <span class="card-title">{{formatDate story.date 'do MMMM YYYY LT'}}</span>
        {{{story.body}}}
      </div>
    </div>
  </div>
  <div class="col s12 m4">
    <div class="card center-align">
      <div class="card-content">
        <span class="card-title">{{story.user.firstName}} {{story.user.lastName}}</span>
        <img src="{{story.user.image}}" alt="" class="circle responsive-img">
      </div>
      <div class="card-action">
        <a href="/story/user/{{story.user.id}}">More From {{story.user.firstName}} {{story.user.lastName}}</a>
      </div>
    </div>
  </div>
</div>